<resources>

    <style name="Theme.EduApp.Landscape" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="controller_seekbar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/bg_mediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/bg_mediacontroller_progressbar</item>
        <item name="android:minHeight">@dimen/common_dp_4</item>
        <item name="android:maxHeight">@dimen/common_dp_4</item>
        <item name="android:thumb">@drawable/bg_controller_progressbar_thumb</item>
        <item name="android:thumbOffset">@dimen/common_dp_8</item>
        <item name="android:paddingLeft">@dimen/common_dp_8</item>
        <item name="android:paddingRight">@dimen/common_dp_8</item>
    </style>

    <style name="seekbar_volume" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/bg_mediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/bg_mediacontroller_progressbar</item>
        <item name="android:minHeight">@dimen/common_dp_140</item>
        <item name="android:maxHeight">@dimen/common_dp_140</item>
        <item name="android:thumb">@drawable/bg_controller_progressbar_thumb</item>
        <item name="android:thumbOffset">@dimen/common_dp_8</item>
        <item name="android:paddingTop">@dimen/common_dp_8</item>
        <item name="android:paddingBottom">@dimen/common_dp_8</item>
    </style>
</resources>